@model Raffle.Web.Models.Raffle.RaffleOrderViewModel

@{
    ViewData["Title"] = "Raffle";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Darts for Dreams Raffle</p>
</div>
<div class="row">
    <div class="nb-3">
        @if(!string.IsNullOrEmpty(Model.ErrorMessage))
        {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
        }
    </div>
</div>
<form method="post">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Category</th>
                    <th scope="col">Points</th>
                    <th scope="col">How Many</th>
                </tr>
            </thead>
            @for (int i = 0; i < Model.RaffleItems.Count; i++)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(m => m.RaffleItems[i].Id)
                        <b>@Model.RaffleItems[i].Title @Html.HiddenFor(x => x.RaffleItems[i].Title)</b>
                        <p>
                            @Model.RaffleItems[i].Description<br />
                            @Model.RaffleItems[i].Sponsor
                        </p>
                    </td>
                    <td>@Model.RaffleItems[i].Category</td>
                    <td>@Model.RaffleItems[i].Cost @Html.HiddenFor(x => x.RaffleItems[i].Cost)</td>
                    <td>@Html.TextBoxFor(x => x.RaffleItems[i].Amount, null, new { style = "width:50px", @class = "form-control" })</td>
                </tr>
            }
        </table>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="form-control btn btn-primary">Complete</button>
        </div>
        <div class="col-md-6">
            @Html.ActionLink("Clear Donation", "ClearDonation", "Home", null, new { @class = "btn btn-warning" })
        </div>
    </div>
</form>